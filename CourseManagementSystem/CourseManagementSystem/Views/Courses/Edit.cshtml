@model CourseManagementSystem.Models.Courses.CourseEditViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="PublishDate" />

            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div>
                    <label class="control-label">Select category:</label>
                </div>

                @for(var i = 0; i < Model.SelectedCategories.Count; i++)
                {
                    <div>
                        <input type="hidden" asp-for="SelectedCategories[i].Id" />
                        <input type="hidden" asp-for="SelectedCategories[i].Name" />


                        <input asp-for="SelectedCategories[i].IsSelected" type="checkbox"/>
                        
                        <label asp-for="SelectedCategories[i].IsSelected">
                            @Model.SelectedCategories[i].Name
                        </label>
                    </div>
                }

            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">Back to courses</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
